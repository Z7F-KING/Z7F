local isSpamming = {}
local function startSpamFor(plr, text)
    if isSpamming[plr] then return end
    isSpamming[plr] = true
    spawn(function()
        while isSpamming[plr] do
            SendMessage:FireServer(text)
            task.wait()
        end
    end)
end
local function stopSpamFor(plr) isSpamming[plr] = false end

